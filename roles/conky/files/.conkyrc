conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'black',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'DejaVu Sans Mono:size=10',
    gap_x = 10,
    gap_y = 35,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_class = 'override',
    own_window_type = 'desktop',
    own_window_transparent = true, 
    own_window_argb_visual = true, 
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
${time %H:%M:%S}${alignr}${time %Y-%m-%d}
${voffset -16}${font bold:size=18}${alignc}$nodename${font}
${voffset 4}${alignc}${time %A %B %d, %Y}
${voffset -10}
${font bold:size=14}SYSTEM ${hr 2}${font}
$sysname $kernel $alignr $machine ${font}
Host:$alignr$nodename
Uptime:$alignr$uptime
File System: $alignr${fs_type}
Processes: $alignr ${execi 1000 ps aux | wc -l}
${voffset -10}
${font bold:size=14}CPU ${hr 2}${font}
${execi 1000 grep model /proc/cpuinfo | cut -d : -f2 | tail -1 | sed 's/\s//'}
${cpugraph cpu}
CPU: $cpu% ${cpubar cpu}
CORES 1-4: ${cpu cpu1}% ${cpu cpu2 }% ${cpu cpu3 }% ${cpu cpu4 }%
CORES 5-8: ${cpu cpu5}% ${cpu cpu6 }% ${cpu cpu7 }% ${cpu cpu8 }%
CPU TEMP:${alignr}${hwmon 2 temp 1}°C
${voffset -10}
${font bold:size=14}MEMORY ${hr 2}${font}
RAM $alignc $mem / $memmax $alignr $memperc%
$membar
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}
${voffset -10}
${font bold:size=14}DISK ${hr 2}${font}
/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
DISK I/O: ${alignr}$diskio
READ:  ${diskiograph_read  15}
WRITE: ${diskiograph_write 15}
${voffset -10}
${font bold:size=14}GPU ${hr 2}${font}
GPU: $alignr ${exec nvidia-settings -tq GPUUtilization | awk -F ', ' '{ print $1 }' | awk -F '[/= ]' '{ print $2}' }%
Memory: $alignr ${exec nvidia-settings -tq GPUUtilization | awk -F ', ' '{ print $2 }' | awk -F '[/= ]' '{ print $2}' }%
Temperature: $alignr ${exec nvidia-settings -tq ThermalSensorReading}°C
${voffset -10}
${font bold:size=14}NETWORK ${hr 2}${font}
EXTERNAL ip: ${alignr}${EXEC wget -qO- https://ipecho.net/plain ; echo}
LOCAL IP: ${alignr}${addr wlp0s20f3}
Download ${alignr}${downspeedf wlp0s20f3}k/s (${totaldown wlp0s20f3})
${downspeedgraph wlp0s20f3}
Upload ${alignr}${upspeedf wlp0s20f3}k/s (${totalup wlp0s20f3})
${upspeedgraph wlp0s20f3}
${font bold:size=14}Processes ${hr 2}${font}
Name $alignr PID   CPU%   MEM%
${top name 1} $alignr ${top pid 1} ${top cpu 1}% ${top mem 1}%
${top name 2} $alignr ${top pid 2} ${top cpu 2}% ${top mem 2}%
${top name 3} $alignr ${top pid 3} ${top cpu 3}% ${top mem 3}%
${top name 4} $alignr ${top pid 4} ${top cpu 4}% ${top mem 4}%
${top name 5} $alignr ${top pid 5} ${top cpu 5}% ${top mem 5}%
${top name 6} $alignr ${top pid 6} ${top cpu 6}% ${top mem 6}%
${top name 7} $alignr ${top pid 7} ${top cpu 7}% ${top mem 7}%
${top name 8} $alignr ${top pid 8} ${top cpu 8}% ${top mem 8}%
${top name 9} $alignr ${top pid 9} ${top cpu 9}% ${top mem 9}%
${top name 10} $alignr ${top pid 10} ${top cpu 10}% ${top mem 10}%
]]
